<!DOCTYPE web-app PUBLIC 
   "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" 
   "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

   <!-- General description of your Web application -->
   <display-name>
      AJAX Examples
   </display-name>

   <description>
      This is the Web application in which we 
      demonstrate the use of AJAX.
   </description>

   <!-- Servlet definitions -->


   <servlet>
      <servlet-name>lookupCustomer</servlet-name>

      <description>
         An AJAX servlet 1
      </description>

      <servlet-class>
         lk.next.workshop.ajax.pizza.lookupCustomer
      </servlet-class>

   </servlet>

   <servlet>
      <servlet-name>placeOrder</servlet-name>

      <description>
         An AJAX servlet 2
      </description>

      <servlet-class>
         lk.next.workshop.ajax.pizza.placeOrder
      </servlet-class>

   </servlet>
   <servlet>
      <servlet-name>coffeeMaker</servlet-name>

      <description>
         An AJAX servlet 3
      </description>

      <servlet-class>
         lk.next.workshop.ajax.coffee.coffeeMaker
      </servlet-class>

   </servlet>
   <!-- Servlet mappings -->

   <servlet-mapping>
      <servlet-name>lookupCustomer</servlet-name>
      <url-pattern>/Customer</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>placeOrder</servlet-name>
      <url-pattern>/Order</url-pattern>
   </servlet-mapping>
      <servlet-mapping>
      <servlet-name>coffeeMaker</servlet-name>
      <url-pattern>/Coffee</url-pattern>
   </servlet-mapping>
</web-app>
